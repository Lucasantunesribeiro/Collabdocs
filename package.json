{
  "name": "collab-docs",
  "version": "1.0.0",
  "packageManager": "npm@10.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply COLLAB_DOCS_DB",
    "db:create": "wrangler d1 migrations create",
    "clean": "turbo clean",
    "setup:cloudflare": "powershell -ExecutionPolicy Bypass -File scripts/setup-cloudflare.ps1",
    "setup:cloudflare:simple": "powershell -ExecutionPolicy Bypass -File scripts/setup-cloudflare-simple.ps1",
    "dev:windows": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "wrangler": "^3.114.14"
  }
}
